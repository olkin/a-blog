<div class="post post__<%= post.kind %>">
  <h3><%= post.title %></h3>
  <p><%= post.body %></p>
  <p>
    <%= post.created_at.to_s(:short) %>
  </p>
  <p>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Delete', post_path(post), method: :delete, confirm: 'Are you sure?' %>
  </p>
</div>
